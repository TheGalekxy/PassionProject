@model PassionProject.Models.ViewModels.UpdatePlayer

@{
    ViewBag.Title = "View";
}

@using (Html.BeginForm())
{
    //This will set a hidden input field with value "_RequestVerificationToken"
    //The PlayerController Create Method will look for this token
    //This helps secure the Create() method from being called from other pages.
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="margin-top">Create a Player</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group flex">
            @Html.LabelFor(model => model.player.PlayerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.player.PlayerName, new { htmlAttributes = new { @class = "form-control", Name = "PlayerName" } })
                @Html.ValidationMessageFor(model => model.player.PlayerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group flex">
            @Html.LabelFor(model => model.player.PlayerRank, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.player.PlayerRank, new { htmlAttributes = new { @class = "form-control", Name = "PlayerRank" } })
                @Html.ValidationMessageFor(model => model.player.PlayerRank, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
